# EditorConfig - Cross-editor coding style configuration
# Works in VS Code, Sublime, Atom, etc. - NO npm required!
# https://editorconfig.org

root = true

# All files - base settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# JavaScript files
[*.js]
indent_size = 4
max_line_length = 120

# HTML files
[*.html]
indent_size = 4

# CSS files
[*.css]
indent_size = 4

# JSON files (data, configs)
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2
